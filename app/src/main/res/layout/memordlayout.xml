<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/memo_rmd_dialog"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <!-- 삭제 출력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:id="@+id/rmemo_Title"
                android:layout_gravity="bottom"
                android:gravity="bottom">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rmemo_date"
                android:textSize="8dp"
                android:text="Date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:id="@+id/rmemo_time"
                android:layout_marginStart="5dp"
                android:text="time"/>
        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/notificationImage"
            android:src="@drawable/ic_notifications_black_24dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/updateImage"
            android:src="@drawable/ic_baseline_mode_edit_24"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_restore_from_trash_24"
            android:id="@+id/rmemo_delete"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/rmemo_content"
            android:textSize="15dp"
            android:text="content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="확인"
            android:id="@+id/rmemo_confirm"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="0dp"
            />


    </LinearLayout>
</LinearLayout>